style "entry" 
{
  xthickness = 0
  ythickness = 0
	engine "pixmap" 
  		{
			image 
		        {
				function        = FLAT_BOX
				recolorable     = TRUE
        			detail          = "entry_bg"
				file            = "text.png"
				border		= {6,6,6,6 }
				stretch         = TRUE
      			}
  			image 
      			{
        			function        = SHADOW
				recolorable     = TRUE
				shadow          = IN
				file            = "trans.png"
				border          = { 0,0,0,0 }
				stretch         = TRUE
      			}
			image 
			{
				function        = FOCUS
				recolorable     = TRUE
				overlay_file    = "trans.png"
				overlay_border  = { 0,0,0,0 }
				overlay_stretch = TRUE
			}
	}
}

