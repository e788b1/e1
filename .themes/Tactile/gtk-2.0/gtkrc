            border          = { 12, 23, 10, 11 }
            stretch         = TRUE
        }

image {
            function        = BOX
            recolorable     = TRUE
	    state           = PRELIGHT
            file            = "menubar_option_prelight.png"
            border          = { 12, 23, 10, 11 }
            stretch         = TRUE
        }

        image {
            function        = TAB
            recolorable     = TRUE
